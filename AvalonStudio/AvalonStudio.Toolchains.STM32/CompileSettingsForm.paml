<TabItem xmlns="https://github.com/perspex" Header="Compiler">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Panel Grid.ColumnSpan="2">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Floating Point:"/>
                    <DropDown Items="{Binding FpuOptions}" SelectedIndex="{Binding FpuSelectedIndex}"/>

                    <TextBlock Text="Optimization Level" Margin="25 0 0 0"/>
                    <DropDown Items="{Binding OptimizationLevelOptions}" SelectedIndex="{Binding OptimizationLevelSelectedIndex}"/>

                    <TextBlock Text="Optimization Preference" Margin="25 0 0 0"/>
                    <DropDown Items="{Binding OptimizationPreferenceOptions}" SelectedIndex="{Binding OptimizationPreferenceSelectedIndex}" />
                    
                    <CheckBox IsChecked="{Binding DebugSymbols}" Content="Debug Symbols" Margin="25 0 0 0"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0 ">
                    <CheckBox IsChecked="{Binding CppSupport}" Content="C++"/>
                    <CheckBox IsChecked="{Binding Rtti}" Content="Runtime Type Info" Margin="25 0 0 0"/>
                    <CheckBox IsChecked="{Binding Exceptions}" Content="Exceptions" Margin="25 0 0 0"/>
                </StackPanel>
            </StackPanel>
            
        </Panel>
        
        <Panel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                                
                <ListBox Items="{Binding IncludePaths}" SelectedItem="{Binding SelectedInclude}"/>
                
                <StackPanel Grid.Column="1">
                    <Button Content="Add" Command="{Binding AddIncludePathCommand}" Margin="5 0 0 0" />
                <Button Content="Remove" Command="{Binding RemoveIncludePathCommand}" Margin="5 5 0 0" />
                </StackPanel>
                
            </Grid>
        </Panel>
        
        <Panel Grid.Row="1" Grid.Column="2" >
        <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBox Text="{Binding DefineText}" />
                <ListBox Grid.Row="1" Items="{Binding Defines}" SelectedItem="{Binding SelectedDefine}"/>
                
                <StackPanel Grid.RowSpan="2" Grid.Column="1">
                    <Button Content="Add" Command="{Binding AddDefineCommand}" Margin="5 0 0 0" />
                <Button Content="Remove" Command="{Binding RemoveDefineCommand}" Margin="5 5 0 0" />
                </StackPanel>
                
            </Grid>
        </Panel>
        
        <Panel Grid.Row="2" Grid.ColumnSpan="2" >
            <TextBox Text="{Binding MiscOptions}"/>
        </Panel>
        
        <Panel Grid.Row="3" Grid.ColumnSpan="2">
            <TextBox Text="{Binding CompilerArguments}" IsEnabled="False"  />
        </Panel>
    </Grid>    
</TabItem>