<Styles xmlns="https://github.com/avaloniaui">
  <Style Selector="Button.hyperlink">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <TextBlock Text="{TemplateBinding Content}" Cursor="Hand" TextWrapping="Wrap" />
        </ControlTemplate>
      </Setter.Value>
    </Setter>
    <Setter Property="Foreground" Value="#007ACC" />
  </Style>

  <Style Selector="Button:pointerover.hyperlink">
    <Setter Property="Foreground" Value="#67CCFE" />
  </Style>
</Styles>