<UserControl xmlns="https://github.com/perspex" xmlns:te="clr-namespace:AvalonStudio.TextEditor;assembly=AvalonStudio"
             Background="#2D2D30" Foreground="WhiteSmoke">
  <Border BorderBrush="#3E3E42" BorderThickness="1">
    <Grid RowDefinitions="25,*">
      <TextBlock Text="{Binding Title}" Margin="0,0,0,0" TextAlignment="Center" />
      <te:TextEditor Grid.Row="1" TextDocument="{Binding TextDocument, Mode=TwoWay}" 
                     FontFamily="{Binding FontFamily}" FontSize="14" Foreground="#D4D4D4" BorderThickness="0"
                     SyntaxHighlightingData ="{Binding HighlightingData}"  BeforeTextChangedCommand="{Binding BeforeTextChangedCommand}"
                     TextChangedCommand="{Binding TextChangedCommand}" Diagnostics="{Binding Diagnostics}" 
                     TextChangedDelay="225" CaretIndex="{Binding CaretIndex}" VerticalAlignment="Stretch"
                     AcceptsReturn="true" AcceptsTab="true" TabCharacter="{Binding TabCharacter}"
                     CommentBrush="#559A3F" CallExpressionBrush="Yellow"
                     IdentifierBrush="#D4D4D4"
                     KeywordBrush ="#569CD6"                     
                     LiteralBrush="#D69D85"
                     PunctuationBrush="#D4D4D4"
                     UserTypeBrush="#4BB289">
        <!--
        <te:TextEditor.Margins>
          <te:LineNumberMargin/>
        </te:TextEditor.Margins>
        -->

                   </te:TextEditor>
    </Grid>
  </Border>
</UserControl>