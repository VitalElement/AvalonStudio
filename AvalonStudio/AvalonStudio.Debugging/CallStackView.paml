<UserControl xmlns="https://github.com/perspex"  xmlns:controls="clr-namespace:AvalonStudio.Controls;assembly=AvalonStudio.Extensibility"
             xmlns:vm="clr-namespace:AvalonStudio.Debugging;assembly=AvalonStudio.Debugging">
  <controls:ToolControl Title="Call Stack">
    <ListBox BorderThickness="0" Items="{Binding Frames}" Background="{StyleResource ThemeControlDarkBrush}">
      <ListBox.DataTemplates>
        <DataTemplate DataType="vm:FrameViewModel">
          <StackPanel Orientation="Horizontal" Gap="5" Background="{Binding Background}">
            <TextBlock Text="{Binding Function}" Width="90" />
            <TextBlock Text="{Binding Line}" />
            <TextBlock Text="{Binding Address}" />
            <TextBlock Text="{Binding File}" />
          </StackPanel>
        </DataTemplate>
      </ListBox.DataTemplates>
    </ListBox>
  </controls:ToolControl> 
</UserControl>