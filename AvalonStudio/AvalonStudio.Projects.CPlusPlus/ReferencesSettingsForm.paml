<TabItem xmlns="https://github.com/avaloniaui" xmlns:proj="clr-namespace:AvalonStudio.Projects.CPlusPlus;assembly=AvalonStudio.Projects.CPlusPlus" Header="References">
  <Grid>
    <ListBox Items="{Binding Projects}" Grid.Column="1" Margin="10 0 0 0" >
      <ListBox.DataTemplates>
        <DataTemplate DataType="proj:ReferenceViewModel">
          <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding IsReferenced}"  />
            <TextBlock Text="{Binding Name}" Foreground="WhiteSmoke" />            
          </StackPanel>
        </DataTemplate>
      </ListBox.DataTemplates>
    </ListBox>
  </Grid>
</TabItem>